{% extends 'index.html.twig' %}

{% block title %}Отделы ТЦ{% endblock %}

{% block bread_crumbs %}
    <div class="row border_grey_b" >
        <div class="wa" >
            <div class="bread_crumbs_row" >
                <a href="{{ path('index') }}" ><span >Главная</span ></a >

                {% if this_category is defined %}
                    <span class="rp20" >></span >
                    <a href="{{ path('department') }}" ><span class="" >Отделы ТЦ</span ></a>
                    <span class="rp20" >></span >
                    <span class="active_crumbs" >{{ this_category.name }}</span >
                {% else %}
                    <span class="rp20" >></span >
                    <span class="active_crumbs" >{{ renter.name }}</span >
                {% endif %}

            </div >
        </div >
    </div >
{% endblock %}

{% block content %}
    <div class="row red_b" >
        <div class="wa" >
            <div class="slider_actions" >
                {#<div class="turn_slider_blk fl " >#}
                {#<img src="{{ asset('img/left.svg') }}" class="brand_slider_next" >#}
                {#</div >#}
                <div class="action_name" >
                    <h1 class="white_c center cm35" >
                        {{ renter.name }}
                    </h1 >
                </div >
                {#<div class="turn_slider_blk fr f_gorizontal" >#}
                {#<svg class="brand_slider_next" id='test' xmlns="http://www.w3.org/2000/svg" viewBox="0 0 13.47 24.96"><defs><style>.cls-1{fill:none;stroke-miterlimit:10;stroke-width:1.5px;}</style></defs><title>Ресурс 6</title><g id="Слой_2" data-name="Слой 2"><g id="Слой_1-2" data-name="Слой 1"><polyline class="cls-1" points="0.53 0.53 12.42 12.58 0.53 24.43"/></g></g></svg>#}
                {#</div >#}
            </div >
        </div >
    </div >
    <div class="row white_bm" >
        <div class="wa" >

                        <div class="row white_bm white_tm " id="row">
                            <div class="wa" >
                                <div class="row_inline_brand" >
                                    <div class="action_img_blk fl" >
                                        <img src="uploads/file/{{ renter.image }}" class="action_img">
                                    </div >
                                    <div class="brank_descriptin_blk fl" >
                                        <div class="brand_blk_inline" >


                                            <div class="brand_logo_inline fl" >
                                                <img src="uploads/file/{{ renter.logo }}" class='logo_rent' id="logo">
                                            </div >
                                            <div class="row cm35" >
                                                <div class="button fl" >
                                                    <a href="/our_map/{{ renter.floor }}/{{ renter.id }}" id="show_map" class="block_href2">
                                                        ПОКАЗАТЬ НА КАРТЕ
                                                    </a>
                                                </div >
                                                <div class="floor_brand_inline black fl " id="floor">
                                                    {{ renter.floor }} этаж
                                                </div >
                                                <div class="link_brand_inline fl " id="link">
                                                    {{ renter.link }}
                                                </div >

                                                <div class="row cm35 main_vertical_flex" >
                                                    <div class="action_description" id="description">
                                                        {{ renter.description|raw }}
                                                    </div >
                                                    <div class="smm_links_blk black cm35" id="socset">
                                                        <div >{{ 'Подписывайте в соц сетях'|upper }} </div >
                                                        <div id="smm" class="smm_flex">
                                                        {% if renter.instagram != '' %}

                                                            <div class="smm_item" ><div class="smm_in" ><a href="{{ renter.instagram }}" class="block"></a></div ></div >

                                                        {% endif %}
                                                        {% if renter.vk != '' %}

                                                                <div class="smm_item" ><div class="smm_vk" ><a href="{{ renter.vk }}" class="block"></a></div ></div >

                                                        {% endif %}
                                                        {% if renter.facebook != '' %}

                                                                <div class="smm_item" ><div class="smm_fb" ><a href="{{ renter.facebook }}" class="block"></a></div ></div >

                                                        {% endif %}
                                                    </div>
                                                    </div >
                                                </div >
                                            </div >
                                        </div >
                                    </div >
                                </div >
                            </div >
                            <div class="help" ></div >
                        </div >

        </div >
    </div >

{% endblock %}

