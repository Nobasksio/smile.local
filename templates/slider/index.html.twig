                </div >
            </div >
        </div >
        <div class="row">
            <div class="col-md-2" >
                <a href="{{ path('slider_new') }}">
                    <span class="btn btn-block btn-primary">Добавить новую</span>
                </a>
            </div>
        </div>


    </section >

    <!-- /.content -->
    {% endblock %}

{% block title %}Slider index{% endblock %}

{% block body %}
    <h1>Slider index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Image</th>
                <th>Link</th>
                <th>Sort</th>
                <th>Active</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for slider in sliders %}
            <tr>
                <td>{{ slider.id }}</td>
                <td>{{ slider.image }}</td>
                <td>{{ slider.link }}</td>
                <td>{{ slider.sort }}</td>
                <td>{{ slider.active ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('slider_show', {'id': slider.id}) }}">show</a>
                    <a href="{{ path('slider_edit', {'id': slider.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('slider_new') }}">Create new</a>
{% endblock %}
