{% extends 'admin/index.html.twig' %}
  {% block content %}

      <div class="content-wrapper" >
          <!-- Content Header (Page header) -->
          <section class="content-header" >
              <h1 >
                  Создать новую страницу

              </h1 >
              <ol class="breadcrumb" >
                  <li ><a href="#" ><i class="fa fa-dashboard" ></i > Home</a ></li >
                  <li class="active" >Новая страница</li >
              </ol >
          </section >

          <!-- Main content -->
          <section class="content" >
              <!-- /.row -->
              <!-- Main row -->

              <div class="row" >
                  <div class="col-md-6" >
                      <div class="box box-warning" >

                          <div class="box-body" >
                              {{ form_start(form) }}


                              <div class="form-group" >
                                  <label >Преимущество</label >
                                  {{ form_widget(form.plus, {'attr': {'rows': '10','cols':'80'} }) }}

                              </div >
                              <div class="form-group" >
                                  <label >Сортировка</label >
                                  {{ form_widget(form.sort, {'attr': {'class': 'form-control',
                                      'value':'500',
                                      'placeholder':'введите число. чем меньше тем ближе к началу' }}) }}

                              </div >

                              <div class="form-group" >
                                  <div class="checkbox" >
                                      <label >
                                          {{ form_widget(form.active) }} Активность
                                      </label >
                                  </div >
                              </div >
                              <div class="box-footer" >

                                  {% if plus.id == '' %}

                                  <button type="submit" class="btn btn-info " >Создать</button >
                              </div >
                              {{ form_end(form) }}

                              {% else %}
                              <button type="submit" class="btn btn-info " >Сохранить</button >
                          </div >
                          {{ form_end(form) }}

                          {{ include('plus/_delete_form.html.twig') }}

                          {% endif %}

                      </div >
                  </div >
              </div >
      </div >
      </div >


      </section >

      <!-- /.content -->
  {% endblock %}
