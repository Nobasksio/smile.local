{% extends 'admin/index.html.twig' %}
  {% block content %}
      <div class="content-wrapper" >
          <!-- Content Header (Page header) -->
          <section class="content-header" >
              <h1 >
                  Создать новый отдела

              </h1 >
              <ol class="breadcrumb" >
                  <li ><a href="#" ><i class="fa fa-dashboard" ></i > Home</a ></li >
                  <li class="active" >Новый отдел</li >
              </ol >
          </section >

          <!-- Main content -->
          <section class="content" >
              <!-- /.row -->
              <!-- Main row -->

              <div class="row" >
                  <div class="col-md-6" >
                      <div class="box box-warning" >

                          <div class="box-body" >
                              {{ form_start(form) }}
                                  <!-- text input -->
                                  <div class="form-group" >
                                      <label >Название</label >
                                      {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}

                                  </div >
                                  <div class="form-group" >
                                      <label >Сортировка</label >
                                      {{ form_widget(form.sort, {'attr': {'type':'number','class': 'form-control','placeholder':'чем меньше тем ближе к началу'}}) }}

                                  </div >
                                  <div class="form-group" >

                                      <div class="checkbox" >
                                          <label >
                                              <input type="checkbox" > Активен
                                          </label >
                                      </div >

                                  </div >
                                  <div class="box-footer" >

                                      <button type="submit" class="btn btn-info " >Создать</button >
                                      {% if category is defined %}
                                          <a href="{{ path('category_delet',{'id':category.id}) }}"><span type="submit" class="btn btn-danger pull-right " >Удалить</span ></a>
                                      {% endif %}
                                  </div >

                              {{ form_end(form) }}
                          </div >
                      </div >
                  </div >
              </div >


          </section >

          <!-- /.content -->
  {% endblock %}