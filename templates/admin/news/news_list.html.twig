{% extends 'admin/index.html.twig' %}
  {% block content %}
      <div class="content-wrapper" >
          <!-- Content Header (Page header) -->
          <section class="content-header" >
              <h1 >
                  Новости

              </h1 >
              <ol class="breadcrumb" >
                  <li ><a href="#" ><i class="fa fa-dashboard" ></i > Home</a ></li >
                  <li class="active" >Новости</li >
              </ol >
          </section >

          <!-- Main content -->
          <section class="content" >
              <!-- /.row -->
              <!-- Main row -->

              <div class="row" >
                  <div class="col-md-12" >
                      <div class="box box-warning" >

                          <div class="box-body">
                              <table id="example2" class="table table-bordered table-hover">
                                  <thead>
                                  <tr>
                                      <th>#</th>
                                      <th>Заголовок</th>
                                      <th>Дата</th>
                                  </tr>
                                  </thead>
                                  <tbody>
                                  {% for new in news %}
                                  <tr onclick="window.location.href='{{ path('redact_news',{'id':new.id}) }}'; return false">
                                      <td>{{ loop.index }}</td>
                                      <td>{{ new.name }}
                                      </td>

                                      <td>{{ new.date|date("d.m.Y") }}</td>
                                  </tr>
                                  {% endfor %}

                                  </tbody>
                              </table>
                          </div>
                      </div >
                  </div >
              </div >
              <div class="row">
                  <div class="col-md-2" >
                  <a href="{{ path('create_news') }}">
                      <span class="btn btn-block btn-primary">Добавить новую</span>
                  </a>
                  </div>
              </div>



          </section >

          <!-- /.content -->
  {% endblock %}