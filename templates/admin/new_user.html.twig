{% extends 'admin/index.html.twig' %}
  {% block content %}

      <div class="content-wrapper" >
          <!-- Content Header (Page header) -->
          <section class="content-header" >
              <h1 >
                  Создать нового пользователя

              </h1 >
              <ol class="breadcrumb" >
                  <li ><a href="#" ><i class="fa fa-dashboard" ></i > Home</a ></li >
                  <li class="active" >Новый пользователь</li >
              </ol >
          </section >

          <!-- Main content -->
          <section class="content" >
              <!-- /.row -->
              <!-- Main row -->
            {{ form_start(form) }}
              <div class="row" >
                  <div class="col-md-6" >
                      <div class="box box-warning" >

                          <div class="box-body" >
                          {{ form_errors(form) }}


                                  <div class="form-group" >
                                      <label >{{ form_label(form.name, 'Имя Фамилия') }}</label >
                                      {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}

                                  </div >
                                  <div class="form-group" >
                                      <label >{{ form_label(form.plainPassword, 'Пароль') }}</label >
                                      {{ form_widget(form.plainPassword, {'attr': {'class': 'form-control'}}) }}

                                  </div >
                                  <div class="form-group" >
                                      <label >{{ form_label(form.email, 'Email') }}</label >
                                      {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}

                                  </div >

                                  <div class="form-group" >

                                      <div class="checkbox" >
                                          <label >
                                               {{ form_widget(form.active) }} Активность
                                          </label >
                                      </div >

                                  </div >
                                  <div class="box-footer" >
                                    {{ form_label(form.register, 'Создать') }}
                                    {{ form_widget(form.register, {'attr': {'class': 'btn btn-info',}}) }}

                                  </div >

                          </div >
                      </div >
                  </div >
              </div >
{{ form_end(form) }}

          </section >

          <!-- /.content -->
  {% endblock %}

          {% block jsinline %}
          <script>
              $(function () {
                  //Date picker
                  $('#datepicker').datepicker({
                      autoclose: true
                  })
                  $('#datepicker2').datepicker({
                      autoclose: true
                  });
                  $('.select2').select2()
              })

          </script>
          {% endblock %}