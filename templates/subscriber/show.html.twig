{% extends 'admin/index.html.twig' %}
  {% block content %}

      <div class="content-wrapper" >
          <!-- Content Header (Page header) -->
          <section class="content-header" >
              <h1 >
                  Подписчик

              </h1 >
              <ol class="breadcrumb" >
                  <li ><a href="#" ><i class="fa fa-dashboard" ></i > Home</a ></li >
                  <li class="active" >Подписчик</li >
              </ol >
          </section >

          <!-- Main content -->
          <section class="content" >
              <!-- /.row -->
              <!-- Main row -->

              <div class="row" >
                  <div class="col-md-6" >
                      <div class="box box-warning" >

                          <div class="box-body" >


                                  <!-- text input -->
                                  <div class="form-group">
                                      <label>Дата подписки:</label>

                                      <div class="input-group">
                                        {{ subscriber.dateSubscribe|date('d.m.Y') }}
                                      </div>
                                      <!-- /.input group -->
                                  </div>
                                  <div class="form-group" >
                                      <label >Активность</label >
                                         {{ subscriber.activate ? 'Да' : 'Нет' }}
                                  </div >

                                  <div class="form-group">
                                      <label for="preview">Email</label>
                                      {{ subscriber.email }}
                                  </div>

                                  <div class="box-footer" >


                                      {% if subscriber is defined %}
                                          <a href="{{ path('subscriber_delete',{'id':subscriber.id}) }}"><span type="submit" class="btn btn-danger pull-right " >Удалить</span ></a>
                                      {% endif %}
                                  </div >

                          </div >
                      </div >
                  </div >
              </div >


          </section >

          <!-- /.content -->
  {% endblock %}

          {% block jsinline %}
          <script>
              $(function () {
                  CKEDITOR.replace('editor1')
                  //Date picker
                  $('#datepicker').datepicker({
                      autoclose: true,

                  })
                  $('#datepicker2').datepicker({
                      autoclose: true
                  });
                  $('.select2').select2()
              })
            function update(type) {
                $('#'+type+'_upload').html('');
                $('#news_redact_'+type+'_upload').removeClass('hide');
                $('#news_redact_'+type+'_upload').click();
            }
          </script>
          {% endblock %}