{% extends 'admin/index.html.twig' %}
  {% block content %}
      <div class="content-wrapper" >
      <!-- Content Header (Page header) -->
      <section class="content-header" >
          <h1 >
              Подписчики

          </h1 >
          <ol class="breadcrumb" >
              <li ><a href="#" ><i class="fa fa-dashboard" ></i > Home</a ></li >
              <li class="active" >Подписчики</li >
          </ol >
      </section >

      <!-- Main content -->
      <section class="content" >
          <!-- /.row -->
          <!-- Main row -->

          <div class="row" >
              <div class="col-md-12" >
                  <div class="box box-warning" >

                      <div class="box-body">
                          <table id="example2" class="table table-bordered table-hover">
                              <thead>
                              <tr>
                                  <th>#</th>
                                  <th>Email</th>
                                  <th>Дата</th>
                                  <th>Активность</th>
                              </tr>
                              </thead>
                              <tbody>
                              {% for subscriber in subscribers %}
                                  <tr onclick="window.location.href='{{ path('subscriber_show',{'id':subscriber.id}) }}'; return false">
                                      <td>{{ loop.index }}</td>
                                      <td>{{ subscriber.email }}
                                      </td>

                                      <td>{{ subscriber.dateSubscribe|date("d.m.Y") }}</td>
                                      <td>{{ subscriber.activate ? 'Да' : 'Нет' }}
                                  </tr>
                              {% endfor %}

                              </tbody>
                          </table>
                      </div>
                  </div >
              </div >
          </div >
          <div class="row">
              <div class="col-md-2" >
                  <a href="{{ path('subscriber_download') }}">
                      <span class="btn btn-block btn-primary">скачать</span>
                  </a>
              </div>
          </div>



      </section >

      <!-- /.content -->
  {% endblock %}